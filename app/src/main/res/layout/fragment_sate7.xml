<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    tools:context=".AboutMeActivity">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_me_bg">
        <ImageView
            android:id="@+id/meIcon"
            android:src="@drawable/sate7_logo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/meName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:text="柒星通信科技（北京）有限公司"/>
        <TextView
            android:id="@+id/meAddType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="版本号：v1.1.01"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_me_bg"
        android:orientation="vertical">
        <TextView
            style="@style/Sate7_TextView"
            android:text="地址:北京市朝阳区工人体育场东路18号百富国际大厦第1幢8单元A号"/>
        <TextView
            style="@style/Sate7_TextView"
            android:text="邮箱：michael.rc.yang@7sate.com"/>
        <TextView
            style="@style/Sate7_TextView"
            android:text="电话：010-52900304"/>
        <TextView
            style="@style/Sate7_TextView"
            android:paddingBottom="5dp"
            android:text="官方网站：http://www.7sate.com/"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/sate7Call"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#2077F7"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/btn_me_bg_exit"
        android:text="电话咨询"/>
</LinearLayout>