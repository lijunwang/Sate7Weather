<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <include
        android:id="@+id/loginToolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toBottomOf="@id/loginToolBar"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/default_logo"
        android:scaleType="centerInside"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="@id/loginText"
        app:layout_constraintTop_toTopOf="@id/loginText"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="手机注册"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/loginToolBar"
        app:layout_constraintLeft_toRightOf="@id/icon"/>
    <EditText
        android:id="@+id/loginPhoneNum"
        android:layout_width="0dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="请输入手机号码"
        android:layout_marginTop="72dp"
        android:gravity="start|center_vertical"
        app:layout_constraintRight_toLeftOf="@id/loginGetVCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon"/>
    <TextView
        android:id="@+id/loginGetVCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_marginRight="30dp"
        android:textColor="#2077F7"
        android:textSize="13sp"
        android:clickable="true"
        app:layout_constraintBaseline_toBaselineOf="@id/loginPhoneNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/loginPhoneNum"/>
    <com.wynsbin.vciv.VerificationCodeInputView
        android:id="@+id/loginInputVCode"
        android:layout_width="match_parent"
        app:vciv_et_spacing="5dp"
        app:layout_goneMarginTop="13dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginPhoneNum"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:vciv_et_background="@drawable/btn_rect"
        app:vciv_et_cursor_color="@color/colorPrimary"
        app:vciv_et_height="47dp"
        app:vciv_et_inputType="number"
        app:vciv_et_number="5"
        app:vciv_et_text_color="#2077F7"
        app:vciv_et_text_size="18sp"
        app:vciv_et_underline_default_color="@android:color/holo_green_dark"
        app:vciv_et_underline_focus_color="@android:color/holo_blue_bright"
        app:vciv_et_underline_height="2dp"
        app:vciv_et_underline_show="false"
        app:vciv_et_width="28dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginInputVCode"
        android:layout_marginTop="68dp"
        android:enabled="false"
        android:textColor="@color/colorWhite0"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:background="@drawable/btn_login"
        android:text="登陆"/>
    <TextView
        android:id="@+id/loginNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:text="登陆即同意 用户协议 以及 隐私政策"
        android:layout_marginTop="13dp"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>